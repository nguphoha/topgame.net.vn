<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3
               http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">
        
    <url-mapping id="trang-chu">
        <pattern value="/trang-chu.html"/>
        <view-id value="#{indexRouter.routing}" /> 
    </url-mapping>
    
    <url-mapping id="chuyen-muc">
        <pattern value="/chuyen-muc-#{/[a-zA-Z-]+/categoryCode}.html"/>
        <view-id value="#{categoryRouter.routing}" /> 
    </url-mapping>
    
    <url-mapping id="game">
        <pattern value="/game-#{/[a-zA-Z-]+/typeView}.html"/>
        <view-id value="#{indexRouter.routing}" /> 
    </url-mapping>
    
    <url-mapping id="trang-chu">
        <pattern value="/"/>
        <view-id value="#{indexRouter.routing}" />
    </url-mapping>   
               
    <url-mapping id="chi-tiet-game">
        <pattern value="/chi-tiet-game-#{/[a-zA-Z-]+/gameCode}.html"/>
        <view-id value="#{gameRouter.routing}" />
    </url-mapping>              
    
    <url-mapping id="dang-nhap">
        <pattern value="/dang-nhap.html"/>
         <view-id value="#{loginRouter.routing}"/>
    </url-mapping>
    <url-mapping id="trang-ca-nhan">
        <pattern value="/trang-ca-nhan.html"/>
         <view-id value="#{profileRouter.routing}"/>
    </url-mapping>
    <url-mapping id="ket-qua-tim-kiem">
        <pattern value="/ket-qua-tim-kiem.html"/>
         <view-id value="#{searchRouter.routing}"/>
    </url-mapping>
    
    <url-mapping id="expert-index">
        <pattern value="/chuyen-gia-tu-van/#{/[a-zA-Z-]+/code:expertRouter.code}.html"/>
        <view-id value="#{expertRouter.routing}" />   
    </url-mapping>
             
</pretty-config>
